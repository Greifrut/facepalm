<%= form_for @post do |f| %>
    <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
    </div>

    <div>
        <%= f.label :summary %>
        <%= f.text_field :summary %>
    </div>

<div>
    <%= f.label :post %>
    <%= f.trix_editor :post, class: 'editor' %>
</div>

<%= f.submit "Create" %>

<% end %>