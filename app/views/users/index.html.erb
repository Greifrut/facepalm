<% content_for :user_info do %>
    <div class="user-page clearfix">
        <div class="user-avatar">
            <img src="../assets/avatar.jpg" alt=" ">
        </div>
        <div class="info">
            <div class="user-info">
                <h2><%= current_user.name %> <%= current_user.surname %> </h2>
                <hr/>
                <h3><%= current_user.email %></h3>
            </div>
        </div>
    </div>
<% end %>


<h1>Все пользователи: </h1>

<%= will_paginate %>

<ul class="users">
    <% @users.each do |user| %>
        <li><%= link_to user.email, user %></li>
        <% unless current_user == user %>
            <% if current_user.friends(user) %>
                <%= link_to  "Unfriend", friendship_path(user), method: :delete %>
            <% elsif current_user.pending(user) %>
                <%= link_to  "Cancel", friendship_path(user), method: :delete %>
            <% else %>
                <%= link_to  "Add friend", friendships_path(friend_id: user), method: :post %>
            <% end %>
        <% end %>
    <% end %>
</ul>

<ul>
    <% current_user.requested_friendships.each do |request| %>
    <li>
      <%= request.name %>
      <%= link_to "Accept",  friendship_path(id: request.id), method: :patch %>
      <%= link_to "Decline", friendship_path(id: request.id), method: :delete %>
    </li>
  <% end %>
</ul>


<h2> Friend</h2>
<% current_user.received_friends.each do |user| %>
    <li><%= user.name %> <%= user.surname %></li>
<% end %>
<%= will_paginate %>
