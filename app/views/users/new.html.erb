
<div class="container-signup">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4 col-md-offset-4">
            <div class="form-style">
                    <%= form_for @user do |f| %>
                    <%= render 'shared/errors', object: @user %>

                    <h2>Регистрация</h2>

                    <div class="form-group">
                        <%= f.label :name, class: 'sr-only' %>
                        <%= f.text_field :name, placeholder: 'имя' , class: 'form-control' %>
                    </div>
    
                    <div class="form-group">
                        <%= f.label :surname, class: 'sr-only' %>
                        <%= f.text_field :surname, placeholder: 'фамилия', class: 'form-control' %>
                    </div>
    
                    <div class="form-group">
                        <%= f.label :email, class: 'sr-only' %>
                        <%= f.email_field :email, placeholder: 'email', class: 'form-control' %>
                    </div>
    
    
                    <div class="form-group">
                        <%= f.label :password, class: 'sr-only'  %>
                        <%= f.password_field :password, placeholder: 'пароль', class: 'form-control' %>
                    </div>
    
                    <div class="form-group">
                        <%= f.label :password_confirmation, class: 'sr-only' %>
                        <%= f.password_field :password_confirmation, placeholder: 'подтвердите', class: 'form-control' %>
                    </div>
                    
                    <%= f.submit 'Зарегестрировать', class: 'btn btn-primary' %>
    
                <% end %>
            </div>
        </div>
        <div class="col-md-4"></div>
    </div>
</div>